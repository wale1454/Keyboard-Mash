{
    "manifest_version": 3,
    "name": "Keyboard-Mash",
    "version": "1.0",
    "description": "Plays a mechanical keyboard sound fx on every keystroke.",
    "permissions": [],
    "host_permissions": ["<all_urls>"],
    "web_accessible_resources": [
  {
    "resources": [
      "sounds/*.mp3"
    ],
    "matches": ["<all_urls>"]
  }
],

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ]
    ,
  "icons":{
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
  }
  }
  
